            <div id='reservaciones'>
              <% if (data.length > 0) { %>
                <h2 class="headerText">Reservaciones Efectuadas</h2>

                <form method="post" action="/buscarReservas">
                  <div class="form-row">
                    <div class="form-group col-md-2">
                      <label for="anio"> Año </label>
                      <select name="anio" class="form-control">
                        <option value="2018">2018</option>
                        <option value="2017">2017</option>
                        <option value="2016">2016</option>
                        <option value="2015">2015</option>
                      </select>
                    </div>
                    <div class="form-group col-md-2">
                      <label for="mes"> Mes </label>
                      <select name="mes" class="form-control">
                          <option value="todos">Todos</option>
                          <option value="01">Enero</option>
                          <option value="02">Febrero</option>
                          <option value="03">Marzo</option>
                          <option value="04">Abril</option>
                          <option value="05">Mayo</option>
                          <option value="06">Junio</option>
                          <option value="07">Julio</option>
                          <option value="08">Agosto</option>
                          <option value="09">Septiembre</option>
                          <option value="10">Octubre</option>
                          <option value="11">Noviembre</option>
                          <option value="12">Diciembre</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group col-md-6">
                      <label class="control-label" for="tipo"> Tipo </label>
                      <select name="tipo" class="form-control">
                        <option value="todos">Todos</option>
                          <option value="Peluquería">Peluquería</option>
                          <option value="Masajes">Masajes</option>
                          <option value="Faciales">Faciales</option>
                          <option value="Manicure">Manicure</option>
                          <option value="Pedicure">Pedicure</option>
                          <option value="Hombres">Para Hombres</option>
                      </select>
                  </div>
                  <div class="form-group col-md-2">
                    <label class="control-label" for=""> </label>
                    <button type="submit" class="btn btn-primary">Buscar</button>
                  </div>
                </form>

                  <table class="table table-hover text-center">
                      <thead class="thead-dark">
                          <tr>
                              <th> Fecha</th>
                              <th> Hora</th>
                              <th> Tipo</th>
                              <th> Estado</th>
                              <th> Empleado</th>
                              <th> Valor</th>
                          </tr>
                      </thead>
                      <tbody id="cuerpoReservas">
                        <% data.forEach(function(item, index){ %>
                          <tr>
                            <!-- <td><a href="/delete/<%= item.id %>">DELETE</a></td>
                            <td><a href="/edit/<%= item.id %>">EDIT</a></td> -->
                            <td><%= item.fechaC %></td>
                            <td><%= item.hora %></td>
                            <td><%= item.descripcion %></td>
                            <td><%= item.estado %></td>
                            <td><%= item.empleado %></td>
                            <td>$$$<td>
                            <td><a href="reservaciones/editar/<%= item.idcita %>" class="btn btn-info editar" role="button">Editar</a></td>
                            <td><a href="reservaciones/eliminar/<%= item.idcita %>" class="btn btn-danger eliminar" role="button">Eliminar</a></td>
                            <!-- <td><button type="button" class="btn btn-danger" id="reservaciones/eliminar/<%= item.idcita %>">Eliminar</button></td> -->
                          </tr>
                        <% }); %>
                      </tbody>
                  </table>
              <% } else{ %>
                <h2>No Existen Reservaciones Efectuadas</h2>
              <% } %>
